<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:foreground="?attr/selectableItemBackground"
    android:clipToPadding="false">

    <!-- Background circle; adapter will set background resource on this view so it always covers full 36dp area -->
    <View
        android:id="@+id/day_bg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/day_cell"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="sans-serif" />

    <View
        android:id="@+id/holiday_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="6dp"
        android:background="@drawable/holiday_dot_bg"
        android:visibility="gone" />

</FrameLayout>
